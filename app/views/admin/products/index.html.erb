<div class="container-fluid">
  <div class="row-fluid">
    <h1><%= @products.count %> Active products</h1><br/>
    <%= link_to "View inactive Products", '/admin/products/inactive', class: 'btn btn-success' %>
  </div>

    <table class="table" id= "product_list">
      <%= render partial: 'heading' %>
      <tbody>
      <%= render partial: 'product', collection: @products %>
      </tbody>
    </table>
  </div>

  <div class="paginate">
    <%= will_paginate @products %>
  </div>



<script>
    $(document).ready(function(){
        $("#admin_form").keyup(function(){
            $.post($(this).attr('action'), $(this).serialize(), null,'script');
            return false;

        });
    })
</script>

