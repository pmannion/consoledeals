<div class="container-fluid">
  <div class="row-fluid">
    <h1>Listing active suppliers</h1>

    <div class="span12">
      <div class="span3"><%= link_to "Create Supplier" , new_supplier_path, class: "btn btn-large btn-success"%></div>
      <div class="span3"><%= link_to "Inactive Suppliers" , inactive_suppliers_path, class: "btn btn-large btn-success"%></div>
    </div>

    <table class="table table-hover push-down">
      <div class="tab-pane">
        <%= render :partial => 'heading' %>
        <%= render :partial => 'supplier', :collection => @suppliers %>
      </div>
    </table>
  </div>
  <div class="paginate">
    <%= will_paginate @suppliers %>
  </div>
</div>



