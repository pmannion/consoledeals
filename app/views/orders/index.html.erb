<% content_for :title do %>Orders<% end %>
<% content_for :header do %> <%= stylesheet_link_tag %><% end %>
<div class="container" id="generic">
  <div class="row-fluid">
    <h4><%= @orders.size if @orders %> Orders</h4>
  </div>

  <div class="span12">
    <div class="span3"><%= link_to "Processed Orders" , "#", class: "btn btn-large btn-success"%></div>
  </div>

  <div class="row-fluid push-down">
    <div class="tab-pane">
      <table class="table table-hover">
        <tbody>
        <%= render :partial => 'heading' %>
        <%= render :partial => 'order', :collection => @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>



