<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12 ">
      <div class="span12 push-right">
        <ul>
          <% if @products.blank? %>
            <li><%= image_tag('green-thumb.jpg', size: '40x40') %> Use the search options to find your perfect console deal</li>
          <% else %>
              <li><%= image_tag('green-thumb.jpg', size: '40x40') %> We have found <%= @products.size %> products based on your search options</li>
          <% end %>
          <li><%= image_tag('green-thumb.jpg', size: '40x40') %> All products are displayed in order of lowest price</li>
          <li><%= image_tag('green-thumb.jpg', size: '40x40') %> Consoledeals.com is impartial and will always show you the best prices first</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row-fluid">
     <div class="span12">

       <div class="span2" id="refine_consoles">
          <p id="refine">Refine your search</p>
         <%= simple_form_for @giftsearch, url: gift_search_results_path, :method => :post   do |f| %>
           <div class="span8">console format:</div>
             <div class="span7">
               <%= f.collection_select :console_id, Console.all, :id, :console_format, include_blank: "Please Choose", label: false %>
              </div>

             <div class="span8">Include games:</div>
               <div class="span7 reduce_field">
                 <%= f.select :show_games, [['yes', true],['no', false]], label: false, include_blank: 'Please Choose' %>
               </div>

              <div class="span8">minimum Price:</div>
                 <div class="span7">
                   <%= f.input :min_spend, label: false, required: true %>
                  </div>

               <div class="span8">maximum Price:</div>
                 <div class="span7">
                   <%= f.input :max_spend, label: false, required: true %>
                 </div>


             <%= f.submit "Search for consoles", class: "btn btn-small btn-success", id: "submit-gift-button" %>
         <% end %>
       </div>

       <div class="span10">
        <div class="tab-pane">
          <table class="table table">
            <%= form_tag('/compare-products/compare/') do %>
             <% if @products.present? %>
              <%= render :partial => 'heading' %>
              <%= render :partial => 'gift' , :collection=> @products%>
            <% else %>
                <%= render :partial => 'heading' %>
                <%= render :partial =>'empty' %>
            <% end %>
          </table>
          <% end %>
       </div>
     </div>
   </div>
 </div>
</div>

