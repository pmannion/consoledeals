<!DOCTYPE html>
<html>
<head>

  <script type="text/javascript">
      $(function(){
          $('.carousel').carousel();
      });
  </script>
  <title>Presents</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

      <div id="header">
        <div id="myCarousel" class="carousel slide">
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>
          <!-- Carousel items -->
          <div class="carousel-inner">
            <div class="active item"><%= image_tag("xboxone.jpeg" ) %></div>
            <div class="item"><%= image_tag("xboxone.jpeg") %></div>
            <div class="item"><%= image_tag("xboxone.jpeg") %></div>
          </div>
          <!-- Carousel nav -->
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
      </div>


    <div class="container-fluid">
      <div class="row-fluid">
    <div class="span12">
      <div class="navbar navbar-inverse navbar-static">
        <div class="navbar-inner">
          <div class="container">

            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>

            <!-- Be sure to leave the brand out there if you want it shown -->
            <%= link_to "ConsoleDeals.com", root_path, class: "brand" %>

            <!-- Everything you want hidden at 940px or less, place within here -->
            <div class="nav-collapse collapse navbar-responsive-collapse">
              <ul class="nav">
                <li class="active"><%= link_to "Home" ,root_path %></li>
                <!--add admin filter to the link below -->
                <li><%= link_to "Console Search", root_path %></li>
                <li><%= link_to "Adverts", adverts_path %></li>
                <li><%= link_to "Admin",admin_path %></li>
              </ul>
              <form class="navbar-search pull-left hidden-phone hidden-tablet" action="">
                <input type="text" class="search-query span10" placeholder="Search">
              </form>
              <ul class="nav pull-right">
                <li class="divider-vertical"></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag('cart.jpg', size: '30x30', id:'cart-glow') %> Cart<b class="caret"></b></a>
                  <ul class="dropdown-menu pull-right" id="cart-dropdown">
                    <% if @cart.nil?%>
                        <li> No Items in cart</li>
                    <% else %>
                        <div id="cart">
                          <%= render @cart %>
                        </div>

                        <%= link_to "Check Out", new_order_path, class: 'btn btn-xs btn-success', id: 'reserve-button' %>
                    <% end %>
                  </ul>
                <% unless current_user %>
                <li><%= link_to "Register", new_user_registration_path %></li>
                <% end %>

                <li class="divider-vertical"></li>
                <li class="dropdown">
                  <% if current_user %>
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
                  <% else %>
                  <a href="<%= new_user_session_path %>">Sign in </a>
                      <% end %>
                  <% if current_user %>
                  <ul class="dropdown-menu">
                    <li><a href="">Profile</a></li>
                    <li><a href="<%= new_advert_path %>">Create advert</a></li>
                    <li><a href="#">Reviews</a></li>
                    <li class="divider"></li>
                    <li><a href="<%= logout_path  %>">Sign out</a></li>
                    <% else %>

                  <% end %>
                  </ul>
                </li>
              </ul>
            </div>
            <!-- .nav, .navbar-search, .navbar-form, etc -->
          </div>
        </div>
      </div>
    </div>
  </div>

      <%= render 'layouts/messages' %>

<%= yield %>

   <div class="footer"></div>

</body>
</html>
